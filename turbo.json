{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "lib/**", ".next/**", "coverage/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/__tests__/**",
        "**/*.test.{ts,tsx,js,jsx}",
        "jest.config.{js,ts}",
        "jest-setup.{js,ts}"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "eslint.config.{js,ts}", ".eslintrc.{js,json}"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.{ts,tsx}", "tsconfig.json", "tsconfig.*.json"]
    },
    "format": {
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        "**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc",
        "prettier.config.{js,ts}"
      ]
    },
    "format:check": {
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        "**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc",
        "prettier.config.{js,ts}"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "functions:deploy": {
      "dependsOn": ["build", "test", "lint"],
      "inputs": ["apps/functions/**", "firestore.rules", "firestore.indexes.json", "firebase.json"],
      "outputs": [],
      "cache": false
    },
    "mobile:check": {
      "dependsOn": [],
      "outputs": [],
      "inputs": ["apps/mobile/src/**/*.{ts,tsx,js,jsx}", "apps/mobile/tsconfig.json", "apps/mobile/eslint.config.js"]
    },
    "mobile:prebuild": {
      "dependsOn": ["mobile:check"],
      "outputs": ["apps/mobile/ios/**", "apps/mobile/android/**"],
      "inputs": ["apps/mobile/app.config.js", "apps/mobile/package.json", "apps/mobile/src/**"],
      "cache": true
    },
    "mobile:prebuild:android": {
      "dependsOn": ["mobile:check"],
      "outputs": ["apps/mobile/android/**"],
      "inputs": ["apps/mobile/app.config.js", "apps/mobile/package.json", "apps/mobile/src/**"],
      "cache": true
    },
    "mobile:ios:build": {
      "dependsOn": ["mobile:prebuild"],
      "outputs": ["apps/mobile/ios/build/**"],
      "inputs": ["apps/mobile/ios/**", "!apps/mobile/ios/build/**", "!apps/mobile/ios/Pods/**"],
      "cache": true
    },
    "mobile:android:build": {
      "dependsOn": ["mobile:prebuild:android"],
      "outputs": ["apps/mobile/android/app/build/**"],
      "inputs": ["apps/mobile/android/**", "!apps/mobile/android/app/build/**", "!apps/mobile/android/.gradle/**"],
      "cache": true
    }
  },
  "globalDependencies": ["package.json", "turbo.json", ".env", ".env.local"]
}
