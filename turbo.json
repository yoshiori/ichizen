{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "lib/**", ".next/**", "coverage/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx}",
        "**/__tests__/**",
        "**/*.test.{ts,tsx,js,jsx}",
        "jest.config.{js,ts}",
        "jest-setup.{js,ts}"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "eslint.config.{js,ts}", ".eslintrc.{js,json}"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**/*.{ts,tsx}", "**/*.{ts,tsx}", "tsconfig.json", "tsconfig.*.json"]
    },
    "format": {
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        "**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc",
        "prettier.config.{js,ts}"
      ]
    },
    "format:check": {
      "outputs": [],
      "inputs": [
        "src/**/*.{ts,tsx,js,jsx,json,md}",
        "**/*.{ts,tsx,js,jsx,json,md}",
        ".prettierrc",
        "prettier.config.{js,ts}"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    },
    "functions:deploy": {
      "dependsOn": ["build", "test", "lint"],
      "inputs": ["apps/functions/**", "firestore.rules", "firestore.indexes.json", "firebase.json"],
      "outputs": [],
      "cache": false
    }
  },
  "globalDependencies": ["package.json", "turbo.json", ".env", ".env.local"]
}
