{
  "name": "ichizen",
  "version": "1.0.0",
  "description": "Daily small good deeds tracking app",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "mobile:dev": "turbo run dev --filter=mobile",
    "functions:dev": "turbo run dev --filter=functions",
    "mobile:build": "turbo run build --filter=mobile",
    "functions:build": "turbo run build --filter=functions",
    "mobile:test": "turbo run test --filter=mobile",
    "functions:test": "turbo run test --filter=functions",
    "mobile:lint": "turbo run lint --filter=mobile",
    "functions:lint": "turbo run lint --filter=functions",
    "mobile:typecheck": "turbo run typecheck --filter=mobile",
    "functions:typecheck": "turbo run typecheck --filter=functions",
    "functions:deploy": "turbo run functions:deploy",
    "prepare": "husky || true",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "expo-build-properties": "^0.14.6",
    "firebase-tools": "^14.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.8.2",
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "expo": "~53.0.11",
    "react": "19.0.0",
    "react-native": "0.79.3"
  }
}
