{
  "name": "mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "dev": "expo start",
    "dev:production": "NODE_ENV=production expo start --web",
    "dev:emulator": "EXPO_PUBLIC_FIREBASE_ENV=emulator expo start",
    "android": "expo run:android",
    "android:emulator": "EXPO_PUBLIC_FIREBASE_ENV=emulator expo run:android",
    "android:production": "EXPO_PUBLIC_FIREBASE_ENV=production expo run:android",
    "ios": "expo run:ios",
    "ios:emulator": "EXPO_PUBLIC_FIREBASE_ENV=emulator expo run:ios",
    "ios:production": "EXPO_PUBLIC_FIREBASE_ENV=production expo run:ios",
    "web": "expo start --web",
    "web:production": "NODE_ENV=production expo start --web",
    "build": "expo export",
    "build:production": "NODE_ENV=production expo export",
    "test": "jest",
    "test:production": "NODE_ENV=production npm test -- --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint src/ --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "seed": "npx tsx scripts/seed-data.ts",
    "mobile:check": "npm run typecheck && npm run lint",
    "mobile:prebuild": "npx expo prebuild --platform ios --clean",
    "mobile:prebuild:android": "npx expo prebuild --platform android --clean",
    "mobile:ios:build": "cd ios && xcodebuild -workspace ichizen.xcworkspace -scheme ichizen -configuration Debug -sdk iphonesimulator -arch arm64 -derivedDataPath build build-for-testing CODE_SIGN_IDENTITY=\"\" CODE_SIGNING_REQUIRED=NO CODE_SIGNING_ALLOWED=NO ONLY_ACTIVE_ARCH=YES COMPILER_INDEX_STORE_ENABLE=NO",
    "mobile:android:build": "cd android && ./gradlew assembleDebug --parallel --build-cache --configuration-cache --no-daemon"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@invertase/react-native-apple-authentication": "^2.4.1",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-firebase/app": "^22.2.1",
    "@react-native-firebase/auth": "^22.2.1",
    "@react-native-firebase/firestore": "^22.2.1",
    "@react-native-firebase/functions": "^22.2.1",
    "@react-native-firebase/messaging": "^22.2.1",
    "@react-native-google-signin/google-signin": "^14.0.1",
    "dotenv": "^16.5.0",
    "expo": "~53.0.11",
    "expo-dev-client": "^5.2.0",
    "expo-status-bar": "~2.2.3",
    "i18next": "^25.2.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-i18next": "^15.5.2",
    "react-native": "0.79.3",
    "react-native-localize": "^3.4.1",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.53.0",
    "@testing-library/jest-native": "^5.4.1",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.14",
    "@types/react": "~19.0.10",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "firebase": "^11.9.1",
    "firebase-tools": "^14.6.0",
    "jest": "^29.7.0",
    "jest-expo": "^53.0.7",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.5.3",
    "react-native-gesture-handler": "~2.24.0",
    "react-test-renderer": "^19.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.1",
    "typescript": "~5.8.3"
  },
  "private": true
}
