# Firebase Environment Configuration
# Copy this file to .env and adjust values as needed

# For emulator development, use "emulator"
# For production builds, use "production"
FIREBASE_ENV=emulator
ENVIRONMENT=development

# For EMULATOR development: Use these dummy values (must match google-services.json)
# For PRODUCTION: Replace with real Firebase project values
FIREBASE_API_KEY=AIzaSyA_DummyApiKey_ForEmulatorOnly
FIREBASE_PROJECT_ID=ichizen-emulator-dev
FIREBASE_AUTH_DOMAIN=ichizen-emulator-dev.firebaseapp.com
FIREBASE_STORAGE_BUCKET=ichizen-emulator-dev.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:android:abcdef1234567890abcdef
FIREBASE_MEASUREMENT_ID=G-DUMMY12345

# Emulator Configuration (Android emulator uses 10.0.2.2 to reach host)
FIREBASE_AUTH_EMULATOR_HOST=10.0.2.2
FIREBASE_AUTH_EMULATOR_PORT=9098
FIREBASE_FIRESTORE_EMULATOR_HOST=10.0.2.2
FIREBASE_FIRESTORE_EMULATOR_PORT=8080
FIREBASE_FUNCTIONS_EMULATOR_HOST=10.0.2.2
FIREBASE_FUNCTIONS_EMULATOR_PORT=5001