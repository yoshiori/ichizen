# Firebase Environment Configuration
# Copy this file to .env and modify as needed

# Set to 'production' to use production Firebase, 'emulator' to use local emulator
EXPO_PUBLIC_FIREBASE_ENV=production

# Emulator Configuration (when FIREBASE_ENV=emulator)
EXPO_PUBLIC_FIREBASE_AUTH_EMULATOR_HOST=localhost
EXPO_PUBLIC_FIREBASE_AUTH_EMULATOR_PORT=9098
EXPO_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_HOST=localhost  
EXPO_PUBLIC_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
EXPO_PUBLIC_FIREBASE_FUNCTIONS_EMULATOR_HOST=localhost
EXPO_PUBLIC_FIREBASE_FUNCTIONS_EMULATOR_PORT=5001